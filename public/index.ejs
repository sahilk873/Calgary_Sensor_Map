<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calgary Sensor Map</title>
    <link rel="stylesheet" href="/css/styles.css">
    <!-- The Google Maps API script will be loaded dynamically -->
</head>
<body>
    <div class="container">
        <div class="search-container">
            <input type="text" id="location-search" placeholder="Enter a location in Calgary...">
            <button id="search-button" class="button">Search</button>
        </div>
        
        <div id="map"></div>
        
        <!-- Sensor Details Modal -->
        <div id="sensor-modal" class="modal">
            <div class="modal-content">
                <span class="close">&times;</span>
                <div id="sensor-details"></div>
                <div class="chat-section">
                    <h3>Chat with AI about this sensor</h3>
                    <div class="chat-messages"></div>
                    <div class="chat-input">
                        <input type="text" placeholder="Ask about this sensor...">
                        <button class="button">Send</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Load environment variables -->
    <script>
        // This will be replaced by the server with the actual API key
        window.GOOGLE_MAPS_API_KEY = '<%- NEXT_PUBLIC_GOOGLE_MAPS_API_KEY %>';
    </script>
    
    <!-- Load Google Maps API -->
    <script src="https://maps.googleapis.com/maps/api/js?key=<%- NEXT_PUBLIC_GOOGLE_MAPS_API_KEY %>&libraries=places,geometry&callback=initMap" async defer></script>

    <script src="/js/map.js"></script>
    <!-- Load Google Maps API dynamically -->
    <script>
        function loadGoogleMapsAPI() {
            const script = document.createElement('script');
            script.src = `https://maps.googleapis.com/maps/api/js?key=${window.GOOGLE_MAPS_API_KEY}&libraries=places&callback=initMap`;
            script.async = true;
            script.defer = true;
            document.head.appendChild(script);
        }
        window.addEventListener('load', loadGoogleMapsAPI);
    </script>

    <script src="/js/map.js"></script>
    <script src="/js/chat.js"></script>
</body>
</html> 